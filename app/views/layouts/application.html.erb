<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <p class="navbar-brand">Bookers</p>
    </div>
    <!-- <ul class="nav navbar-nav">
      <li class="active"><a href="#"></a></li>
      <li><a href="#"></a></li>
      <li><a href="#"></a></li>
    </ul> -->
    <ul class="nav navbar-nav navbar-right">

      <% if user_signed_in? %>

      <li><%= link_to user_path(current_user.id), class: "home" do %><i class="glyphicon glyphicon-home"></i>Home<% end %></li>

      <li><%= link_to users_path, class: "users" do %><i class="glyphicon glyphicon-user"></i> Users<% end %></li>

      <li><%= link_to books_path, class: "books" do %><i class="glyphicon glyphicon-book"></i> Books<% end %></li>

     <li><%= link_to  destroy_user_session_path, method: :delete, class: "logout" do %><i class="glyphicon glyphicon-log-out"></i> Logout<% end %>

     <% else %>

     <li><%= link_to top_path, class: "home" do %><i class="glyphicon glyphicon-home"></i>Home<% end %></li>

      <li><%= link_to about_path, class: "about" do %><i class="glyphicon glyphicon-link"></i> About<% end %></li>

      <li><%= link_to new_user_registration_path, class: "sign_up" do %><i class="glyphicon glyphicon-edit"></i> Sign up<% end %></li>

      <li><%= link_to new_user_session_path, class: "sign_in" do %><i class="glyphicon glyphicon-log-in"></i> Login<% end %></li>

     <% end %>

    </ul>
  </div>
</nav>
    <%= yield %>
  </body>

  <footer>
    <div class="container">
      <div class="row">
        <div class="col-xs-10">
    </div>
        <div class=".col-xs-2">
    <p>CopyRight Infratop.inc</p>
  </div>
      </div>
  </div>
  </footer>

</html>
