
<div class="container">
	<div class="row">
		<div class="col-xs-3">
		</div>
		<div class="col-xs-6 .col-xs-offset-1">

<% if flash[:notice] %>
<div class="flash">
	<%= flash[:notice] %>
</div>
<% end %>

<h1>Editing Book</h1>

<%= form_for (@book) do |book| %>

<label>Titile</label>
<%= book.text_field :title, class: "book_title, form-control" %>

<label>Opinion</label>
<%= book.text_area :caption, class: "book_body, form-control" %>
<br>

<%= book.submit "Update Book", class: "btn btn-primary btn-block" %>

<% end %>

</div>
</div>
</div>