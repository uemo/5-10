<div class="container">
	<div class="row">
		<div class="col-xs-3">

<% if flash[:notice] %>
<div class="flash">
<%= flash[:notice] %>
</div>
<% end %>

<h1>User info</h1>
<%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>
<table class="table table-striped">
	<tr>
		<th>name</th>
		<td><%= @book.user.name %></td>
	</tr>
	<tr>
		<th>introduction</th>
		<td><%= @book.user.profile %></td>
	</tr>
</table>

<% if @book.user.id == current_user.id %>
<%= link_to edit_user_path(@book.user.id), class: "btn btn-default btn-block edit_user_#{@book.user.id}" do %>
<i class="glyphicon glyphicon-wrench"></i>
<% end %>
<% end %>

<h1>New book</h1>
<%= form_for (@book_new) do |f| %>

<label>Title</label>
<%= f.text_field :title, class: 'form-control', class: "book_title" %>

<label>Opinion</label><br>
<%= f.text_area :caption, class: 'form-control', class: "book_body" %>
<br>

<%= f.submit "Create Book", class: "btn btn-primary btn-block" %>

<% end %>

</div>

<div class="col-xs-9">
	<h1>Book detail</h1>
	<table class="table table-striped">

		<tr>
			<td><%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg",size: '40x40' %></td></td>
			<td><%= @book.title %></td>
			<td><%= @book.caption %></td>
			<% if @book.user.id == current_user.id %>
			<td><%= link_to "edit", edit_book_path(@book), class: "edit_book_#{@book.id}" %></td>
			<td><%= link_to "destroy", book_path(@book), method: :delete, class: "destroy_book_#{@book.id}" %></td>
			<% end %>
		</tr>
	</table>



</div>

</div>
</div>