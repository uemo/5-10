<div class="container">
  <div class="row">
    <div class="col-xs-3">

<% if flash[:notice] %>
<div class="flash">
  <%= flash[:notice] %>
</div>
<% end %>

<h2>User info</h2>

<%= form_for(@user) do |f| %>

    <% if @user.errors.any? %>
   <h3><%= @user.errors.count %>errors prohibited this obj from being saved.</h3>
        <% @user.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>


  <div class="field">
    <label>Name</label><br />
    <%= f.text_field :name, autofocus: true, class: 'form-control', class: "name" %>
  </div>

  <div class="field">
    <label>Image</label><br />
    <%= f.attachment_field :profile_image, class: "user_image" %>
  </div>

  <div class="field">
    <label>Introduction</label><br />
    <%= f.text_area :profile, autofocus: true, class: 'form-control', class: "introduction" %>
  </div>

  <div class="actions">
    <%= f.submit "Update User" %>
  </div>
<% end %>

<%= link_to "Back", :back, class: "back" %>

</div>
</div>
</div>
